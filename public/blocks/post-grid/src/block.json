			"margin": [
				"top",
				"bottom",
				"left",
				"right"
			]
		},
		"color": {
			"background": true,
			"text": false,
			"gradients": true
		}
	},
	"textdomain": "boldpost",
	"editorScript": "file:./index.js",
	"viewScript": "file:./view.js",
	"render": "file:./render.php",
	"attributes": {
		"blockId": {
			"type": "string",
			"default": ""
		},
		"ignoreStikcyPosts": {
			"type": "boolean",
			"default": true
		},
		"isFeatured": {
			"type": "boolean",
			"default": false
		},
		"gridStyle": {
			"type": "string",
			"default": "default"
		},
		"columns": {
			"type": "string",
			"default": "3"
		},
		"thumbnailSize": {
			"type": "string",
			"default": "eshb_thumbnail"
		},
		"thumbnailHeight": {
			"type": "string",
			"default": ""
		},
		"perPage": {
			"type": "string",
			"default": "6"
