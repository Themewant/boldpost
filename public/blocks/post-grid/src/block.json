		"order": {
			"type": "string",
			"default": "ASC"
		},
		"orderby": {
			"type": "string",
			"default": "date"
		},
		"offset": {
			"type": "string",
			"default": ""
		},
		"categories": {
			"type": "array",
			"default": [
				"all"
			]
		},
		"excludes": {
			"type": "array",
